@model IEnumerable<Bando_de_Dados_Elton.Models.SegmentoViewModel>

@{
    ViewData["Title"] = "Listagem do Segmento";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>@ViewData["Title"]</h2>
        <a asp-action="Inserir_Segmento" class="btn btn-primary">
            <i class="bi bi-person-plus"></i> Novo Segmento
        </a>
    </div>

    <table class="table table-bordered table-striped table-hover align-middle shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Endereço</th>
                <th>Liderança Elton</th>
                <th>Endereço Liderança</th>
                <th>Telefone Liderança</th>
                <th>Aniversário</th>
                <th>Número Título</th>
                <th>Seção</th>
                <th>Zona</th>
                <th>Local Votação</th>
                <th>Região Atuação</th>
                <th>Potencial Votos</th>
                <th>Eventos</th>
                <th>Histórico</th>
                <th class="text-center">Ações</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id_Segmento</td>
                        <td>@item.Nome_do_Segmento</td>
                        <td>@item.Endereço_do_Segmento</td>
                        <td>@item.Liderança_Elton</td>
                        <td>@item.Endereço_Liderança</td>
                        <td>@item.Telefone_Liderança</td>
                        <td>@item.Aniversário</td>
                        <td>@item.Numero_Titulo</td>
                        <td>@item.Seção</td>
                        <td>@item.Zona</td>
                        <td>@item.Local_Votação</td>
                        <td>@item.Região_Atuação</td>
                        <td>@item.Potencial_votos</td>
                        <td>@item.Eventos</td>
                        <td>@item.Histórico_de_Serviços</td>
                        <td class="text-center">
                            <a asp-action="Alterar_Segmento" asp-route-id="@item.Id_Segmento" class="btn btn-sm btn-warning me-1">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-action="Excluir_Segmento" asp-route-id="@item.Id_Segmento" class="btn btn-sm btn-danger" onclick="return confirm('Deseja realmente excluir este segmento?');">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="16" class="text-center text-muted py-3">
                        Nenhum segmento encontrado.
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
