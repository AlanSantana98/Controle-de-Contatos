@model Bando_de_Dados_Elton.Models.CondominioViewModel

@{
    ViewData["Title"] = "Alterar Condominio";
}

<h1>Alterar Condominio</h1>

<h4>CondominioViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Alterar_Condominio">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input asp-for="Id_Condominio" type="hidden" />

            <div class="form-group">
