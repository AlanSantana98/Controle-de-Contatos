@model IEnumerable<Bando_de_Dados_Elton.Models.IgrejaViewModel>

@{
    ViewData["Title"] = "Listagem de Igrejas";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>@ViewData["Title"]</h2>
        <a asp-action="Inserir_Igreja" class="btn btn-primary">
            <i class="bi bi-building-add"></i> Nova Igreja
        </a>
    </div>

    <table class="table table-bordered table-striped table-hover align-middle shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Nome da Igreja</th>
                <th>Endereço</th>
                <th>Pastor Presidente</th>
                <th>Pastores Auxiliares</th>
                <th>Telefone Pastores</th>
                <th>Qtd. de Membros</th>
                <th>Eventos</th>
                <th>Liderança de Elton</th>
                <th>Telefone Liderança</th>
                <th>Histórico de Serviços</th>
                <th class="text-center">Ações</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id_Igreja</td>
                        <td>@item.Nome_Igreja</td>
                        <td>@item.Endereço_Igreja</td>
                        <td>@item.Pastor_Presidente</td>
                        <td>@item.Pastores_Auxiliares</td>
                        <td>@item.Telefone_Pastores</td>
                        <td>@item.Quantidade_membros</td>
                        <td>@item.Eventos</td>
                        <td>@item.Liderança_de_Elton</td>
                        <td>@item.Telefone_Liderança</td>
                        <td>@item.Histórico_de_Serviços</td>
                        <td class="text-center">
                            <a asp-action="Alterar_Igreja" asp-route-id="@item.Id_Igreja" class="btn btn-sm btn-warning me-1" title="Editar">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-action="Excluir_Igreja" asp-route-id="@item.Id_Igreja" class="btn btn-sm btn-danger" onclick="return confirm('Deseja realmente excluir esta igreja?');" title="Excluir">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="12" class="text-center text-muted py-3">
                        Nenhuma igreja cadastrada.
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
